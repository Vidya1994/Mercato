<%= render :partial=> 'side_nav' %>

<div class="admin-panel-container">
  <div class="section" id="divHeaderSection">
    <div class="row" style="margin-bottom: 0">
      <div class="col s4" id="divProductTableHeading">
        Order Details
      </div>
      <div class="col s4" id="divPageSizeSelectCol">
        <select id="sltOrderDetailStatus" onchange="MERCATO.Admin.AllOrderDetails.onStatusSelectionChanged(this)">
          <option value="ALL">ALL</option>
          <option value="PENDING">PENDING</option>
          <option value="SHIPPED">SHIPPED</option>
          <option value="INVOICED">INVOICED</option>
          <option value="RETURN_INITIATED">RETURN_INITIATED</option>
          <option value="RETURN_RECEIVED">RETURN_RECEIVED</option>
        </select>
        <label id="lblPageSizeSelect" for="sltOrderDetailStatus">Order Detail Status</label>
      </div>
      <div class="col s4" id="divPageSizeSelectCol">
        <select id="sltPageSize" onchange="MERCATO.Admin.AllOrderDetails.onPageSizeChanged(this)">
          <option value="5">5</option>
          <option value="10">10</option>
          <option value="20">20</option>
        </select>
        <label id="lblPageSizeSelect" for="sltPageSize">Page Size</label>
      </div>
    </div>
  </div>
  <div class="section" id="divOrderDetailSection">

  </div>
  <div class="section" id="divNavigationSection">
    <ul id="ulPageNavigation" class="pagination-sm"></ul>
  </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        MERCATO.Admin.AllOrderDetails.totalCount = <%= @order_details['total_count'] %>;
        MERCATO.Admin.AllOrderDetails.pageSize = 5;

        MERCATO.Admin.AllOrderDetails.drawNavigationBar(1, false);
    });
</script>