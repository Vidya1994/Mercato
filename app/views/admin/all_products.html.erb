<%= render :partial=> 'side_nav' %>

<div class="admin-panel-container">
  <div class="section" id="divHeaderSection">
    <div class="row" style="margin-bottom: 0">
      <div class="col s2" id="divProductTableHeading">
        Products
      </div>
      <div class="col s2 offset-s8" id="divPageSizeSelectCol">
        <select id="sltPageSize" onchange="MERCATO.Admin.AllProducts.onPageSizeChanged(this)">
          <option value="5">5</option>
          <option value="10">10</option>
          <option value="20">20</option>
        </select>
        <label id="lblPageSizeSelect" for="sltPageSize">Page Size</label>
      </div>
    </div>
  </div>
  <div class="section" id="divTableSection">

  </div>
  <div class="section" id="divNavigationSection">
    <ul id="ulPageNavigation" class="pagination-sm"></ul>
  </div>
</div>
<div id="divDeleteProductModal" class="modal">
  <div id="divDeleteProductModalContent" class="modal-content">

  </div>
  <div class="modal-footer">
    <input type="hidden" id="hidDeleteProductId" value="">
    <a onclick="MERCATO.Admin.AllProducts.deleteProduct()" class="modal-close waves-effect btn-flat">Yes</a>
    <a href="#!" class="modal-action modal-close waves-effect btn-flat">Close</a>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
      MERCATO.Admin.AllProducts.totalCount = <%= @product_count['total_count'] %>;
      MERCATO.Admin.AllProducts.pageSize = 5;

      MERCATO.Admin.AllProducts.drawNavigationBar(1, false);
  });
</script>