<div style="text-align: center;">
  <div class="section"></div>
  <h5 class="indigo-text">Please, login into your account</h5>
  <div class="section"></div>

  <div class="container">
    <div class="z-depth-1 grey lighten-4 row" style="display: inline-block; padding: 32px 48px 0 48px; border: 1px solid #EEE;">
      <%= form_for :session, url: login_path, html: {class: 'col s12'} do |f| %>
      <div class='row'>
        <div class='col s12'>
        </div>
      </div>

      <div class='row'>
        <div class='input-field col s12'>
          <%= f.email_field :email_id, class: 'validate' %>
          <label for='session_email_id'>Email</label>
        </div>
      </div>

      <div class='row'>
        <div class='input-field col s12'>
          <%= f.password_field :password, class: 'validate' %>
          <label for='session_password'>Password</label>
        </div>
        <!-- Add below code when added functionality to reset password -->
        <!-- <label style='float: right;'>
					<a class='pink-text' href='#!'><b>Forgot Password?</b></a>
				</label> -->
      </div>

      <br />
      <div style="text-align: center;">
        <div class='row'>
          <button type='submit' name='commit' class='col s12 btn btn-large waves-effect indigo'>Login</button>
        </div>
      </div>
    <% end %>
    </div>
  </div>
  <%= link_to 'Create account', '/signup' %>
</div>

<div class="error">
  <p style="color:red"><%= @error_message %></p>
</div>
